<Window x:Class="vEBuLa.Dialogs.SimpleTextBoxPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vEBuLa.Dialogs"
        mc:Ignorable="d"
        WindowStyle="None" ShowInTaskbar="False" WindowStartupLocation="Manual" d:DesignWidth="150" d:DesignHeight="100" KeyDown="Window_KeyDown" Topmost="True"
        FocusManager.FocusedElement="{Binding ElementName=txt}">
    <Window.Resources>
        <Style x:Key="Dark" TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="txt" d:Style="{StaticResource Dark}"/>
    </Grid>
</Window>
