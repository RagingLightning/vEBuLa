<Window x:Class="vEBuLa.Dialogs.EditSavedRouteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vEBuLa.Dialogs"
        mc:Ignorable="d"
        Title="EditLocationDialog" Height="56" Width="376" Topmost="True" ShowInTaskbar="False"
        WindowStartupLocation="Manual" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown"
				FocusManager.FocusedElement="{Binding ElementName=txtName}">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#555" />
            <Setter Property="BorderBrush" Value="#999" />
            <Setter Property="Foreground" Value="#aaa" />
        </Style>
    </Window.Resources>
    <StackPanel Background="#333">
        <DockPanel>
            <TextBox DockPanel.Dock="Right" x:Name="txtDuration" d:Text="00:32:30" ToolTip="Service Duration" TabIndex="4" FocusManager.GotFocus="Focus"/>
            <Rectangle DockPanel.Dock="Right" Width="2" Fill="#666" Margin="5,0"/>
            <TextBox DockPanel.Dock="Right" x:Name="txtStations" d:Text="13" ToolTip="Number of Stops" TabIndex="3" FocusManager.GotFocus="Focus"/>
            <Rectangle DockPanel.Dock="Right" Width="2" Fill="#666" Margin="5,0"/>
            <Button DockPanel.Dock="Right" Content="DESC" TabIndex="2" Click="Desc_Click"/>
            <TextBox DockPanel.Dock="Right" x:Name="txtName" d:Text="Hbf-Melsungen S-Bahn" ToolTip="Route Name" TabIndex="1" FocusManager.GotFocus="Focus"/>
        </DockPanel>
        <Rectangle Height="2" Fill="#666"/>
        <DockPanel>
            <Button DockPanel.Dock="Right" Content="SAVE" TabIndex="6" Click="Save_Click"/>
            <TextBox x:Name="txtRoute" d:Text="Hbf S - Achim - Donau - Melsungen" TabIndex="5" FocusManager.GotFocus="Focus" FontSize="10"/>
        </DockPanel>
        <Rectangle Height="5" Fill="#666"/>
    </StackPanel>
</Window>
