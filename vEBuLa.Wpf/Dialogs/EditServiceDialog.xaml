<Window x:Class="vEBuLa.Dialogs.EditServiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vEBuLa.Dialogs"
        mc:Ignorable="d"
        Title="EditLocationDialog" Height="200" Width="300" Topmost="True" ShowInTaskbar="False"
        WindowStartupLocation="Manual" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown"
				FocusManager.FocusedElement="{Binding ElementName=txtMain}">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Text="Change Service" TextAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
        <Button Grid.Row="0" Grid.Column="6" Margin="5,7" Content="Del" Click="Delete_Click"/>

        <Label Grid.Row="1" Content="Identifier: " FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtMain" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" FontSize="22" FocusManager.GotFocus="Focus"/>

        <Label Grid.Row="2" Content="Description: " FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtSecond" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" FontSize="22" FocusManager.GotFocus="Focus"/>

        <Label Grid.Row="3" Content="Start: " FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtTimeHr" Grid.Row="3" Grid.Column="1" FontSize="22" FocusManager.GotFocus="Focus"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text=":" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTimeMn" Grid.Row="3" Grid.Column="3" FontSize="22" FocusManager.GotFocus="Focus"/>
        <TextBlock Grid.Row="3" Grid.Column="4" Text=":" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTimeSc" Grid.Row="3" Grid.Column="5" FontSize="22" FocusManager.GotFocus="Focus"/>

        <Label Grid.Row="4" Content="Vehicle: " FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtVehicle" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" FontSize="22" FocusManager.GotFocus="Focus"/>
    </Grid>
</Window>
